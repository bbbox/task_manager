= form_for @plant do |f|
  -if @plant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plant.errors.count, "error")} prohibited this plant from being saved:"
      %ul
        - @plant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :serial
    = f.text_field :serial
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
